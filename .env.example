# Plant Assistant Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to version control!

# ==============================================
# üîê CORE SECURITY SETTINGS
# ==============================================

# JWT Secret Key - Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Application Environment
ENVIRONMENT=development

# ==============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ==============================================

# Main Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/plant_assistant

# Test Database (for running tests)
TEST_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/plant_assistant_test

# ==============================================
# üåê WEB & API CONFIGURATION
# ==============================================

# CORS Origins (comma-separated list in JSON format)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# API Route Prefix
API_PREFIX=/api/v1

# Debug Mode (true/false)
DEBUG=true

# ==============================================
# üìß EMAIL CONFIGURATION
# ==============================================

# SMTP Server Settings
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false

# SMTP Authentication (leave empty for local development)
MAIL_USERNAME=
MAIL_PASSWORD=

# Default From Address
MAIL_FROM=noreply@plant_assistant.local
MAIL_FROM_NAME=Plant Assistant

# ==============================================
# üñ•Ô∏è FRONTEND CONFIGURATION
# ==============================================

# Backend API URL (for frontend to connect)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Application Name
NEXT_PUBLIC_APP_NAME=Plant Assistant

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-change-this-too
NEXTAUTH_URL=http://localhost:3000

# ==============================================
# üîß DEVELOPMENT SETTINGS
# ==============================================

# OpenAPI Schema Output
OPENAPI_OUTPUT_FILE=./shared-data/openapi.json

# ==============================================
# üìù PRODUCTION EXAMPLE
# ==============================================
# For production, use values like these:
#
# SECRET_KEY=super-secure-production-key-32-chars-long
# ENVIRONMENT=production
# DATABASE_URL=postgresql+asyncpg://user:pass@prod-host:5432/plant_assistant
# CORS_ORIGINS=["https://yourapp.com", "https://www.yourapp.com"]
# DEBUG=false
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# NEXT_PUBLIC_API_URL=https://api.yourapp.com
# NEXTAUTH_URL=https://yourapp.com

# ==============================================
# üö® SECURITY REMINDERS
# ==============================================
# 1. Change all default values before deploying
# 2. Use strong, unique passwords and keys
# 3. Never commit this file with real secrets
# 4. Rotate secrets regularly
# 5. Use different secrets for each environment


# Development environment variables for pre-commit hooks
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/plant_assistant
ACCESS_SECRET_KEY=dev-access-secret-key-for-precommit
RESET_PASSWORD_SECRET_KEY=dev-reset-secret-key-for-precommit  
VERIFICATION_SECRET_KEY=dev-verification-secret-key-for-precommit
CORS_ORIGINS=["http://localhost:3000"]
OPENAPI_OUTPUT_FILE=./shared-data/openapi.json
ENVIRONMENT=development

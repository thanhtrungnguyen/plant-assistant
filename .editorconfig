# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Shell scripts
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.ps1]
indent_size = 4
end_of_line = crlf

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 4

# Dockerfile
[Dockerfile*]
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2

# Environment files
[.env*]
indent_size = 2
insert_final_newline = false

# Makefile (must use tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# SQL files
[*.sql]
indent_size = 2

# HTML/CSS files
[*.{html,css,scss,sass}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2
